<div class="container-fluid p-0">
  <div class="row no-gutters p-0">
    <div class="col-sm-0 col-md-3 col-xl-2">
      <div class="d-none d-md-block">
        <%= render 'shared/sidenav_fixed' %>
      </div>
    </div>
    <div class="col">
      <div class="container-fluid p-0">
        <div class="row no-gutters p-0">
          <div class="col-lg-8 col-xl-5 justify-content-center" style="padding: 0 20px 50px 20px;">
            <div class="row no-gutters p-0" style="z-index: 5; height: 20vh; background: white; position: sticky; top: 0;">
              <div class="search bar" style="margin: auto;">
                <%= form_tag items_path, method: :get, class: 'search-form' do %>
                  <%= text_field_tag :query,
                    params[:query],
                    class: "form-control px-5",
                    placeholder: "Search for items or location"
                  %>
                  <%= submit_tag "Search", class: "btn px-5", id: 'search-form-button' %>
                <% end %>
              </div>
            </div>
            <div class="container-fluid mb-5 px-0" style="margin-top: 13px;">

                  <div class="row" style="height: 40%;">
                    <div style="display: flex; align-items: center; flex-direction: column;">
                      <%= cl_image_tag @user.photo, crop: :fill, class: 'user-avatar', style:"margin-top: 0;" %>
                      <div class="rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                      </div>
                      <div class="profile-text" style="padding-left: 50px; padding-top: 50px;">
                        <h2><%= @user.first_name %></h2>
                        <p><%= @user.description %></p>
                      </div>
                    </div>
                  </div>
            </div>
          </div>
          <div class="col justify-content-center" style="position: sticky; top: 0; height: 100vh;">
            <div class="container-fluid p-0">
              <div class="row no-gutters p-0" style="z-index: 5; background: white; height: 20vh;">
                <div style="margin: auto; width: 100%;">
                  <h1 class="neighboroo" style="float: right; padding-right: 20px;">Neighboroo</h1>
                </div>
              </div>
              <div class="row no-gutters p-0">

                <div class="col-5" style="padding-left: 50px; padding-right: 20px;">
                  <h2 style="margin-bottom: 50px; font-family: 'Permanent Marker', cursive; letter-spacing: 2px;">Edit Your Profile<!--%= resource_name.to_s.humanize %--></h2>

                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-inputs">
                      <%= f.input :photo, required: true, label: false %>
                      <%= f.input :photo_cache, as: :hidden %>
                      <%= f.input :first_name, display: :inline, label: false,
                                  autofocus: true, placeholder: "first name",
                                  input_html: { autocomplete: "first name" }%>
                      <%= f.input :address, placeholder: "address",
                                  autofocus: true, label: false,
                                  input_html: { autocomplete: "address" }%>
                      <%= f.input :description,
                                  autofocus: true, label: false, placeholder: "a bit about yourself",
                                  input_html: { autocomplete: "description" }%>
                      <%= f.input :password, placeholder: "password",
                                  hint: "leave it blank if you don't want to change it",
                                  required: false, label: false,
                                  input_html: { autocomplete: "new-password" } %>
                      <%= f.input :current_password, placeholder: "current password",
                                  hint: "we need your current password to confirm your changes",
                                  required: true, label: false,
                                  input_html: { autocomplete: "current-password" } %>
                    </div>
                </div>

                <div class="col-5" style="padding-top: 134px; padding-left: 20px;">
                    <div class="form-inputs">
                      <%= f.input :last_name, display: :inline,
                                  autofocus: true, label: false, placeholder: "last name",
                                  input_html: { autocomplete: "last name" }%>
                      <%= f.input :phone_number,
                                  autofocus: true, label: false, placeholder: "phone number",
                                  input_html: { autocomplete: "phone number" }%>
                      <%= f.input :email, required: true, label: false, autofocus: true, input_html: {style: "margin-bottom: 40px"} %>


                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                      <% end %>

                      <%= f.input :password_confirmation, label: false,
                                  required: false, placeholder: "new password",
                                  input_html: { autocomplete: "new-password"} %>
                      <!--%= f.input :expiry_date, input_html: {id: "expiry-date-input"} do %-->
                        <!--%= f.input_field :expiry_date, as: :string, class: "form-control" %-->
                        <!--span class="input-group-addon"><i class="fa fa-calendar"></i></span-->
                      <!--% end %-->
                    </div>

                    <div class="form-actions" style="margin-bottom: 50px;">
                      <%= f.button :submit, "Update" %>
                    </div>
                  <% end %>

                  <h3>Cancel my account</h3>

                  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

                  <%= link_to "Back", :back %>
                  <%= render "devise/shared/links" %>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


