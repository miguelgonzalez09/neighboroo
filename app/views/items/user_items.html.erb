<div class="container-fluid p-0" style="background: white; margin-left: -15px; margin-right: -15px;">
  <div class="row no-gutters p-0" style="margin-left: -15px; margin-right: -15px; height: 100vh;">
    <div class="col-xl-2 col-lg-4 col-md-4 d-none d-md-block" style="position: sticky; height: 100vh;">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="col-xl-10 col-lg-8 col-md-8 col-sm-12" style="height: 100vh;">
      <div class="col-md-12">
        <div class="container-fluid my-5 m-0">
          <% @items.each do |item| %>
            <div class="card mb-3 mr-4" style="width: 200px; border-radius: 10px;">
              <%= link_to item_path(item) do %>
                <div class='profile-pic'>
                  <%= cl_image_tag item.photo, height: 200, width: 200, crop: :fill, class: 'card-img-top', style: 'border-radius: 10px 10px 0 0;' %>
                  <div class="edit">
                    <div class="justify-content-center">
                      <% if policy(item).edit? %>
                        <%= link_to edit_item_path(item) do %>
                          <i class="fas fa-pencil-alt"></i>
                        <% end %>
                      <% end %>
                      <% if policy(item).destroy? %>
                        <%= link_to item_path(item), method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="fas fa-trash-alt ml-1"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
              <div class="card-body px-5">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= item.description %></p>
                <% if current_user.id != item.user_id %>
                  <%= link_to item_path(item), style: 'color:green;' do %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
